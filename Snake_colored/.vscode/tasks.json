{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "cppbuild",
			"label": "C/C++: g++.exe 生成活动文件",
			"command": "C:\\mingw64\\bin\\g++.exe",
			"args": [
				"-fdiagnostics-color=always",
				"-g",
				"${fileDirname}/*.cpp",
				"-I",
				"${fileDirname}", 
				"-I",
				"C:\\mingw64\\cs1604_lib\\src/cs1604/include",
				"-L",
				"C:\\mingw64\\cs1604_lib\\src/cs1604/lib",
				"-l",
				"CS1604",
				"-L",
				"C:\\mingw64\\pdcurses_tutorial",
				"-I",
				"C:\\mingw64\\pdcurses_tutorial",
				"-l",
				"pdcurses",
				"-o",
				"${fileDirname}/${fileBasenameNoExtension}",
				"-std=c++11"
			],
			"options": {
				"cwd": "${fileDirname}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"detail": "编译器: C:\\mingw64\\bin\\g++.exe"
		}
	]
}